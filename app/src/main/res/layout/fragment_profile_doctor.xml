<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.samin.paitientmanagement.fragment.SettingsFragment"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="3dp"
            android:background="#5d6dfd"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <ImageView
            android:id="@+id/profile_edit_image"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/invalid_person_image" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/profile_layout_edit_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_layout_edit_name">

            <EditText
                android:id="@+id/profile_edit_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:hint="Phone"
                android:inputType="number"
                android:maxLines="1"
                android:selectAllOnFocus="true" />
        </android.support.design.widget.TextInputLayout>


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:scaleType="fitCenter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:srcCompat="@drawable/ic_person_black_24dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:scaleType="fitCenter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_layout_edit_name"
            app:srcCompat="@drawable/ic_local_phone_black_24dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:scaleType="fitCenter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_layout_edit_phone"
            app:srcCompat="@drawable/ic_home_black_24dp" />





        <ImageView
            android:id="@+id/change_user_image"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="144dp"
            app:layout_constraintHorizontal_bias="0.96"
            app:layout_constraintLeft_toLeftOf="@+id/profile_edit_image"
            app:layout_constraintRight_toRightOf="@+id/profile_edit_image"
            app:layout_constraintTop_toTopOf="@+id/profile_edit_image"
            app:srcCompat="@drawable/add_user_photo" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/profile_layout_edit_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.37"
            app:layout_constraintLeft_toRightOf="@+id/imageView4"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view">

            <EditText
                android:id="@+id/profile_edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:hint="Name"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:selectAllOnFocus="true" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Personal Details"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_edit_image" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/profile_layout_edit_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintLeft_toRightOf="@+id/imageView6"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_layout_edit_phone">

            <EditText
                android:id="@+id/profile_edit_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:hint="Chamber"
                android:inputType="textLongMessage"
                android:maxLines="1"
                android:selectAllOnFocus="true" />

        </android.support.design.widget.TextInputLayout>





        <!--Specialization-->

        <ImageView
            android:id="@+id/specialization_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:scaleType="fitCenter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_layout_edit_address"
            app:srcCompat="@drawable/specialization_color" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/profile_layout_edit_specialization"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_layout_edit_address"
            app:layout_constraintLeft_toRightOf="@+id/specialization_image"

            >

            <EditText
                android:id="@+id/profile_edit_specialization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:hint="specialization"
                android:inputType="textLongMessage"
                android:maxLines="1"
                android:selectAllOnFocus="true" />

        </android.support.design.widget.TextInputLayout>


        <!--Experience-->

        <ImageView
            android:id="@+id/experience_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:scaleType="fitCenter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_layout_edit_specialization"
            app:srcCompat="@drawable/experience_color" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/profile_layout_edit_experience"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_layout_edit_specialization"
            app:layout_constraintLeft_toRightOf="@+id/specialization_image">

            <EditText
                android:id="@+id/profile_edit_experience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:hint="Years of Experience"
                android:inputType="number"
                android:maxLines="1"
                android:selectAllOnFocus="true" />

        </android.support.design.widget.TextInputLayout>


        <!--Fees-->

        <ImageView
            android:id="@+id/fees_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:scaleType="fitCenter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_layout_edit_experience"
            app:srcCompat="@drawable/fee_color" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/profile_layout_edit_fee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_layout_edit_experience"
            app:layout_constraintLeft_toRightOf="@+id/specialization_image">

            <EditText
                android:id="@+id/profile_edit_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:hint="Your Fees"
                android:inputType="number"
                android:maxLines="1"
                android:selectAllOnFocus="true" />

        </android.support.design.widget.TextInputLayout>


        <!--Timing-->

        <ImageView
            android:id="@+id/timing_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:scaleType="fitCenter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_layout_edit_fee"
            app:srcCompat="@drawable/timing_color" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/profile_layout_edit_timing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            app:layout_constraintLeft_toRightOf="@+id/specialization_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_layout_edit_fee">

            <EditText
                android:id="@+id/profile_edit_timing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:hint="Your Timing"
                android:inputType="none"
                android:selectAllOnFocus="true" />

        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/profile_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="UPDATE"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_layout_edit_timing"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            android:layout_marginBottom="24dp" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>