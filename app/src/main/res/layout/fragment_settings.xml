<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.samin.paitientmanagement.fragment.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->


    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/check_for_update"
        style="@style/MyCardViewStyle"
        android:layout_marginStart="10dp"
        card_view:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        card_view:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="10dp"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="2dp">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/update_lcon"
                android:id="@+id/imageView7"
                android:layout_marginStart="16dp"
                card_view:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="16dp"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp" />
            <TextView
                android:layout_width="232dp"
                android:layout_height="wrap_content"
                android:text="CHECK FOR UPDATE"
                android:layout_marginStart="16dp"
                card_view:layout_constraintLeft_toRightOf="@+id/imageView7"
                android:layout_marginTop="16dp"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                android:textStyle="normal|bold" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:id="@+id/change_log"
        style="@style/MyCardViewStyle"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        card_view:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="10dp"
        card_view:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        card_view:layout_constraintTop_toBottomOf="@+id/check_for_update"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="2dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/changelog_icon"
                android:id="@+id/imageView8"
                android:layout_marginTop="16dp"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                card_view:layout_constraintLeft_toLeftOf="parent" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="CHANGELOG"
                android:layout_marginEnd="16dp"
                card_view:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="16dp"
                card_view:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp"
                card_view:layout_constraintLeft_toRightOf="@+id/imageView8"
                card_view:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                android:textStyle="normal|bold" />

        </android.support.constraint.ConstraintLayout>



    </android.support.v7.widget.CardView>



</android.support.constraint.ConstraintLayout>
