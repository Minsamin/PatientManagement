<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        style="@style/MyCardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="2dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp">

            <ImageView
                android:id="@+id/doctor_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/doctor_1" />

            <TextView
                android:id="@+id/your_appointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/doctor_image"
                android:text="Demo1"
                android:textSize="20sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/break_image"
                android:layout_toRightOf="@+id/doctor_image"
                android:layout_width="match_parent"
                android:layout_marginLeft="-15dp"
                android:layout_marginTop="-6dp"
                android:layout_below="@+id/your_appointment"
                android:layout_height="wrap_content"
                android:src="@drawable/break_line" />

                 />

            <TextView
                android:id="@+id/doctor_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/your_appointment"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="17dp"
                android:layout_toRightOf="@+id/doctor_image"
                android:text="Email Address"
                android:textSize="17sp" />



            <TextView
                android:id="@+id/doctor_spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/doctor_email"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/doctor_image"
                android:text="Specialisation"
                android:textSize="17sp"
                 />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>