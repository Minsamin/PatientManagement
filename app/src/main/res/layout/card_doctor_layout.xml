<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/show_appointment_single_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        style="@style/MyCardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="2dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0.5dp">


            <ImageView
                android:id="@+id/appointment_doctor_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/appointment_doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/appointment_doctor_image"
                android:text="Demo1"
                android:textSize="20sp"
                android:textStyle="bold" />
            <!--<ImageView-->
                <!--android:id="@+id/break_image"-->
                <!--android:layout_toEndOf="@+id/appointment_doctor_image"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_marginStart="-15dp"-->
                <!--android:layout_marginTop="-6dp"-->
                <!--android:layout_below="@+id/appointment_doctor_name"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:src="@drawable/break_line" />-->

            <View
                android:id="@+id/break_image"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:layout_marginStart="20dp"
                android:background="#7c87d1"
                android:layout_below="@+id/appointment_doctor_name"
                android:layout_toEndOf="@+id/appointment_doctor_image"/>

            <TextView
                android:id="@+id/appointment_doctor_spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/appointment_doctor_name"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/appointment_doctor_image"
                android:text="Specialisation"
                android:textSize="14sp"
                />


            <TextView
                android:id="@+id/appointment_doctor_chamber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/appointment_doctor_spec"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/appointment_doctor_image"
                android:text="Chamber"
                android:textSize="12sp" />




        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>