<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        style="@style/MyCardViewStyle"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:contentPadding="5dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="2dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Patient Name : "
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:layout_margin="5dp"
                    android:layout_weight="1" />

                <TextView
                    android:text="NULL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/fetch_patient_name"
                    android:layout_weight="1.5"
                    android:layout_margin="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Patient Phone.No : "
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:layout_margin="5dp"
                    android:layout_weight="1" />

                <TextView
                    android:text="NULL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/fetch_patient_phone"
                    android:layout_weight="1.5"
                    android:layout_margin="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Doctor Name : "
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:layout_margin="5dp"
                    android:layout_weight="1" />

                <TextView
                    android:text="NULL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/fetch_doctor_name"
                    android:layout_weight="1.5"
                    android:layout_margin="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Doctor Phone.No : "
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:layout_margin="5dp"
                    android:layout_weight="1" />

                <TextView
                    android:text="NULL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/fetch_doctor_phone"
                    android:layout_weight="1.5"
                    android:layout_margin="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Doctor Email-ID : "
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:layout_margin="5dp"
                    android:layout_weight="1" />

                <TextView
                    android:text="NULL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/fetch_doctor_email"
                    android:layout_weight="1.5"
                    android:layout_margin="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Appointment Date : "
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10"
                    android:layout_margin="5dp"
                    android:layout_weight="1" />

                <TextView
                    android:text="NULL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/fetch_Appointment_date"
                    android:layout_weight="1.5"
                    android:layout_margin="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Reason : "
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:layout_margin="5dp"
                    android:layout_weight="1" />

                <TextView
                    android:text="NULL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/fetch_Appointment_reason"
                    android:layout_weight="1.5"
                    android:layout_margin="5dp"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>