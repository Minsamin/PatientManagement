<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.samin.paitientmanagement.fragment.SettingsFragment">

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#5d6dfd"
        android:id="@+id/view"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginStart="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="13dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="180dp"
        app:srcCompat="@drawable/invalid_person_image"
        android:id="@+id/profile_edit_image"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerInside"
        android:adjustViewBounds="false"
        android:cropToPadding="false" />

    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:id="@+id/profile_layout_edit_phone"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_layout_edit_name"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView5"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent">

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/profile_edit_phone"
            android:maxLines="1"
            android:focusable="true"
            android:selectAllOnFocus="true"
            android:inputType="number"
            android:hint="Phone"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:id="@+id/profile_layout_edit_address"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_layout_edit_phone"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView6"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent">

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/profile_edit_address"
            android:maxLines="1"
            android:focusable="true"
            android:selectAllOnFocus="true"
            android:inputType="textLongMessage"
            android:hint="Address"
            />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:id="@+id/profile_layout_edit_age"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.33"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView10"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_layout_edit_address">

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/profile_edit_age"
            android:maxLines="1"
            android:focusable="true"
            android:selectAllOnFocus="true"
            android:inputType="number"
            android:hint="Age"
            />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:id="@+id/profile_layout_edit_height"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.33"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_layout_edit_age">

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/profile_edit_height"
            android:maxLines="1"
            android:focusable="true"
            android:selectAllOnFocus="true"
            android:inputType="number"
            android:hint="Height (cm)"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:id="@+id/profile_layout_edit_weight"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView9"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintTop_toBottomOf="@+id/profile_layout_edit_height"
        android:layout_marginTop="8dp">

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/profile_edit_weight"
            android:maxLines="1"
            android:focusable="true"
            android:selectAllOnFocus="true"
            android:inputType="number"
            android:hint="Weight"
            />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:id="@+id/profile_layout_edit_bloodgroup"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_layout_edit_weight"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView8"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent">

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/profile_edit_bloodgroup"
            android:maxLines="1"
            android:focusable="true"
            android:selectAllOnFocus="true"
            android:inputType="text"
            android:hint="Blood Group"
            />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_person_black_24dp"
        android:id="@+id/imageView4"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="fitCenter"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_local_phone_black_24dp"
        android:id="@+id/imageView5"
        android:scaleType="fitCenter"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_layout_edit_name" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_home_black_24dp"
        android:id="@+id/imageView6"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="fitCenter"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_layout_edit_phone" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/age_icon"
        android:id="@+id/imageView10"
        android:scaleType="fitCenter"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_layout_edit_address" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mod_height"
        android:id="@+id/imageView"
        android:scaleType="fitCenter"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_layout_edit_age"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mod_blood"
        android:id="@+id/imageView8"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/profile_layout_edit_bloodgroup"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_layout_edit_weight"
        app:layout_constraintVertical_bias="0.89" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:id="@+id/change_user_image"
        app:srcCompat="@drawable/add_user_photo"
        app:layout_constraintLeft_toLeftOf="@+id/profile_edit_image"
        app:layout_constraintRight_toRightOf="@+id/profile_edit_image"
        app:layout_constraintHorizontal_bias="0.96"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@+id/profile_edit_image"
        android:layout_marginTop="144dp" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mod_weight"
        android:id="@+id/imageView9"
        android:scaleType="fitCenter"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_layout_edit_height"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:id="@+id/profile_layout_edit_name"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.37"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/profile_edit_name"
            android:maxLines="1"
            android:focusable="true"
            android:selectAllOnFocus="true"
            android:inputType="textPersonName"
            android:hint="Name"
            />
</android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/profile_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_layout_edit_bloodgroup"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <TextView
        android:text="Personal Details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_edit_image"
        android:textStyle="normal|bold"
        android:textSize="18sp" />


</android.support.constraint.ConstraintLayout>
</ScrollView>